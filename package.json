{
  "name": "node-build-back",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/cassiolpaixao90/node-build-back.git",
  "author": "Cássio Paixão <cassiopaixaoti@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint core --color",
